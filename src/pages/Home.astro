.modal {
    display: none; 
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.9); /* Fondo oscuro con opacidad */
    display: flex; /* Habilita flexbox */
    justify-content: center; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
    padding-top: 50px;
}

.modal-content {
    max-width: 700px; /* Ancho máximo del contenido */
    max-height: 90%; /* Altura máxima para evitar desbordamiento */
    margin: auto; /* Ayuda adicional para centrar */
    display: block; /* Bloque para elementos de imagen */
}



.close {
    position: absolute;
    top: 15px;
    right: 35px;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
}

.close:hover,
.close:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
}

