---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Recarga Saldo">
  <main>
    <div class="rounded blurEffectOrange z-0 nav p-3">
      <div class="blurEffectWhite">
        <form action="/User" class="m-5">
          <div class="z-2 bg-primary d-flex justify-content-center h-6">
            <span
              class="material-symbols-outlined mx-auto position-absolute"
              style="font-size: 150px; bottom: 85%"
            >
              account_circle
            </span>
          </div>
          <label class="mt-3" for="nameUser">Ingrese su usuario</label>
          <div class="d-flex blurEffectWhite p-2">
            <span class="material-symbols-outlined" style="font-size:200%;">
              person
            </span>
            <input
              class="form-control d-inline-block w-auto flex-fill"
              placeholder="Usuario"
              type="text"
              name=""
              id="nameUser"
            />
          </div>
          <label class="mt-3" for="passwordUser">Ingrese su contraseña</label>
          <div class="d-flex blurEffectWhite p-2">
            <span class="material-symbols-outlined" style="font-size:200%;">
              lock
            </span>
            <input
              class="form-control w-auto flex-fill"
              placeholder="Contraseña"
              type="password"
              id="passwordUser"
            />
          </div>
          <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn">Login</button>
          </div>
          <div class="d-flex justify-content-center align-items-center mt-4">
            <label for="nameUser">¿Aún no tienes cuenta?</label>
            <button type="button" class="ms-3 btn">Sign in</button>
          </div>
        </form>
      </div>
    </div>
  </main>
</Layout>

<style>
  .blurEffectOrange {
    background: rgb(176, 133, 12);
    background: linear-gradient(
      90deg,
      rgba(176, 133, 12, 1) 0%,
      rgba(255, 88, 9, 1) 78%
    );
    border-radius: 16px;
    box-shadow: var(--shadow-elevation-high);
    backdrop-filter: blur(5.6px);
    -webkit-backdrop-filter: blur(5.6px);
    border: 1px solid rgba(255, 87, 51, 0.25);
  }
  .blurEffectWhite {
    background: rgba(244, 244, 244, 0.1);
    box-shadow: var(--shadow-elevation-high);
    border-radius: 4px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(0px);
    -webkit-backdrop-filter: blur(0px);
  }

  .buttonLogin {
  }

  :root {
    --shadow-color: 0deg 0% 0%;
    --shadow-elevation-low: 0px 0.5px 0.5px hsl(var(--shadow-color) / 0.13),
      0px 0.7px 0.7px -1.8px hsl(var(--shadow-color) / 0.1),
      0px 1.7px 1.6px -3.6px hsl(var(--shadow-color) / 0.08);
    --shadow-elevation-medium: 0px 0.5px 0.5px hsl(var(--shadow-color) / 0.13),
      0px 1.1px 1.1px -1.2px hsl(var(--shadow-color) / 0.11),
      0px 3.2px 3.1px -2.4px hsl(var(--shadow-color) / 0.09),
      0px 8.5px 8.2px -3.6px hsl(var(--shadow-color) / 0.07);
    --shadow-elevation-high: 0px 0.5px 0.5px hsl(var(--shadow-color) / 0.12),
      0px 1.6px 1.5px -0.5px hsl(var(--shadow-color) / 0.11),
      0px 3px 2.9px -1px hsl(var(--shadow-color) / 0.1),
      0px 5.5px 5.3px -1.5px hsl(var(--shadow-color) / 0.1),
      0px 9.7px 9.3px -2.1px hsl(var(--shadow-color) / 0.09),
      0px 16.3px 15.6px -2.6px hsl(var(--shadow-color) / 0.08),
      -0.1px 26px 25px -3.1px hsl(var(--shadow-color) / 0.07),
      -0.1px 39.5px 37.9px -3.6px hsl(var(--shadow-color) / 0.06);
  }
  .material-symbols-outlined {
    font-variation-settings:
      "FILL" 1,
      "wght" 400,
      "GRAD" 0,
      "opsz" 4;
  }
</style>

<style>
  .btn {
    font-family: Roboto, sans-serif;
    font-weight: bolder;
    font-size: 14px;
    color: #fff;
    background-color: #0066cc00;
    padding: 15px 30px;
    border: solid #e8e8e8 2px;
    box-shadow: rgb(0, 0, 0) 0px 0px 12px -1px;
    border-radius: 50px;
    transition: 746ms;
    transform: translateY(0);
    display: flex;
    flex-direction: row;
    align-items: center;
    cursor: pointer;
  }

  .btn:hover {
    transition: 746ms;
    padding: 10px 40px;
    transform: translateY(-0px);
    background-color: #fff;
    color: #000000;
    border: solid 2px #ffffff;
  }
</style>
